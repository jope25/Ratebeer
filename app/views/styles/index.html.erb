<h1>Listing Styles</h1>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Average rating</th>
  </tr>
  </thead>

  <tbody>
  <% @styles.each do |style| %>
      <tr>
        <td><%= link_to style.name, style %></td>
        <td><%= style.average_rating %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to('New Style', new_style_path, class:'btn btn-default') if current_user %>
