<h2> <%= @beer %> </h2>

<p>
  <strong>Style:</strong>
  <%= link_to @beer.style.name, @beer.style %>
</p>

<% if @beer.ratings.empty? %>
    <p>beer has not yet been rated!</p>
<% else %>
    <p>has been rated <%= pluralize(@beer.ratings.count, 'time') %>, average score is <%= @beer.average_rating %></p>
<% end %>

<% if current_user %>
    <h4>give a rating:</h4>

    <%= form_for(@rating) do |f| %>
        <%= f.hidden_field :beer_id %>
        score: <%= f.number_field :score %>
        <%= f.submit class:"btn btn-primary btn-xs" %>
    <% end %>
    <br>
    <%= link_to 'Edit', edit_beer_path(@beer), class:'btn btn-default btn-sm' %>
    <%= link_to 'Destroy', @beer, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger btn-sm' %>
<% end %>